@model LoginViewModel
@{
    ViewData["Title"] = "Index";
}


<style>
    .card-columns .card {
        margin-bottom: 0.75rem;
    }

    .text-muted {
        color: #9faecb !important;
    }

    p {
        margin-top: 0;
        margin-bottom: 1rem;
    }

    .mb-3 {
        margin-bottom: 1rem !important;
    }

    .input-group {
        position: relative;
        display: flex;
        width: 100%;
    }
</style>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<br>
<br>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-group mb-0">
                <div class="card p-4">
                    <div class="card-body">
                        <div>
                            <img src="~/Images/logo_prularia_zwart.png" width="40%" height="30%"/>
                        </div> <hr />
                        <p class="text-muted">Login op u account</p>
                        <form asp-action="Index">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Emailadres" class="control-label"></label>
                                <input asp-for="Emailadres" class="form-control" />
                                <span asp-validation-for="Emailadres" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label  type="password"asp-for="Paswoord" class="control-label"></label>
                                <input type="password" asp-for="Paswoord" class="form-control" />
                                <span asp-validation-for="Paswoord" class="text-danger"></span>
                            </div>
                            <p class="text-danger">@ViewBag.message</p>
                            <div class="form-group">
                                <input type="submit" value="Inloggen" class="btn btn-primary"  />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%"  ,"background-color: #ABD7A8 !important" >
                    <div class="card-body text-center">
                        <div>

                      
                     
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

